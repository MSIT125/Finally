
    @{
        ViewBag.Title = "首頁";
    }


    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="hero-text">
                        <h1>Joker Hotel</h1>
                        <p>
                            這是最好的訂房網站,在這裡你可以訂到你想要的房間
                        </p>
                        <a href="/Home/關於我們" class="primary-btn">Discover Now</a>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                    <div class="booking-form">
                        <h3>Booking Your Hotel</h3>
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                        { @Html.AntiForgeryToken()
                                <div class="check-date">
                                    <label for="date-in">Check In:</label>
                                   @Html.TextBox("date_in", null, new { @class = "date-input", @autocomplete = "off", @placeholder = "請選擇入住日期" })
                                    <i class="icon_calendar"></i>
                                </div>
                                <div class="check-date">
                                    <label for="date-out">Check Out:</label>
                                    @Html.TextBox("date_out", null, new { @class = "date-input", @autocomplete = "off", @placeholder = "請選擇退房日期" })
                                    <i class="icon_calendar"></i>
                                </div>
                                <div class="select-option">
                                    <label for="guest">Guests:</label>
                                    @Html.DropDownList("Guest", (IEnumerable<SelectListItem>)ViewBag.guestselect)
                                </div>
                                <div class="select-option">
                                    <label for="room">Room:</label>
                                    @Html.DropDownList("Room", (IEnumerable<SelectListItem>)ViewBag.roomselect)
                                </div>
                                <button type="submit">Check Availability</button>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-slider owl-carousel">
            <div class="hs-item set-bg" data-setbg="/img/searchbg/hero-1.jpg"></div>
            <div class="hs-item set-bg" data-setbg="/img/searchbg/hero-2.jpg"></div>
            <div class="hs-item set-bg" data-setbg="/img/searchbg/hero-3.jpg"></div>
        </div>
    </section>
