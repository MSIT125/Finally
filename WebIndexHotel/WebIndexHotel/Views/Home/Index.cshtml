    <section class="hp-room-section">
        <div class="container-fluid">
            <div class="hp-room-items">
                <div class="row">
                    @foreach (var room in Model)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="hp-room-item set-bg" data-setbg="@room.RoomTypeImg">
                                <div class="hr-text">
                                    <h3>
                                        @room.RoomTypeNameCN
                                    </h3>
                                    <h2>@Convert.ToDouble(room.UnitPrice_Normal)<span>/一晚</span></h2>
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td class="r-o">Capacity:</td>
                                                <td>Persion @room.RoomGuests</td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">Size:</td>
                                                <td>30 ft</td>
                                            </tr>

                                            <tr>
